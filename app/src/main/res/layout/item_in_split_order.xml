<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="7"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:layout_marginTop="3dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:weightSum="5">
        <TextView
            android:id="@+id/stt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/itemNameTv"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Bánh bòa"
            android:textSize="16sp"
            android:textColor="@color/black"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:id="@+id/selectQuantityLl">

        <ImageView
            android:id="@+id/minusIv"
            android:layout_width="20sp"
            android:visibility="gone"
            android:layout_height="20sp"
            android:src="@drawable/remove_icon"
            android:background="@drawable/circle_background_for_add_remove_btn"
            app:tint="#5ea2ce" />
        <EditText
            android:id="@+id/quantityNumberEt"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:inputType="none"
            android:background="@null"/>

        <ImageView
            android:id="@+id/plussIv"
            android:visibility="gone"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/add_icon"
            android:background="@drawable/circle_background_for_add_remove_btn"
            app:tint="#5ea2ce" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:id="@+id/selectSplitQuantityLl">

        <ImageView
            android:id="@+id/minusSplitIv"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/remove_icon"
            android:background="@drawable/circle_background_for_add_remove_btn"
            app:tint="#5ea2ce" />
        <EditText
            android:id="@+id/quantitySplitNumberEt"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:inputType="number"
            android:background="@null"/>

        <ImageView
            android:id="@+id/plussSplitIv"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/add_icon"
            android:background="@drawable/circle_background_for_add_remove_btn"
            app:tint="#5ea2ce" />

    </LinearLayout>

</LinearLayout>